insert into Users values ("5","Ashit45","ashit@gmail.com","0965")
insert into Users values ("6","Raj45","raj@gmail.com","5656")

create table Borrowings (

Borrow_Id int primary key identity(1,1),
User_Id int foreign key references Users(User_Id) on delete cascade,
Book_Id int foreign key references Books(Book_Id) on delete cascade,
Borrow_Date date Not Null,
Return_Date date Not Null

)

insert into Borrowings values ("1","1",'2003-09-24','2005-09-02')
